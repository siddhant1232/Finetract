<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_page"
    android:padding="24dp">

    <!-- Trust/Secure Badge -->
    <LinearLayout
        android:id="@+id/container_secure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E1F5FE"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”’"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/secure_label"
            android:textColor="@color/primary_dark"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:letterSpacing="0.05"/>
    </LinearLayout>

    <!-- Main Circular Progress Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_secure">

        <!-- Background Circle (Gray track) -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:trackThickness="16dp"
            app:indicatorSize="220dp"
            app:trackColor="#E0E0E0"
            app:indicatorColor="#E0E0E0"
            android:progress="100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Actual Progress -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:trackThickness="16dp"
            app:indicatorSize="220dp"
            app:trackColor="@android:color/transparent"
            app:indicatorColor="@color/success_green"
            app:trackCornerRadius="8dp"
            android:progress="50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Centered Text -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/progress_background"
            app:layout_constraintEnd_toEndOf="@id/progress_background"
            app:layout_constraintStart_toStartOf="@id/progress_background"
            app:layout_constraintTop_toTopOf="@id/progress_background">

            <TextView
                android:id="@+id/tv_spend_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹0"
                android:textColor="@color/text_primary"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_limit_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="of â‚¹0"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 1. Daily Insight Line -->
    <TextView
        android:id="@+id/tv_daily_insight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Youâ€™re well within your limit today."
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/container_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 2. Today at a Glance Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_glance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        app:cardBackgroundColor="@color/surface_card"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="#EEF0F2"
        app:layout_constraintTop_toBottomOf="@id/tv_daily_insight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today at a glance"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:letterSpacing="0.05"
                android:layout_marginBottom="12dp"/>

            <!-- Item 1: Transactions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                <TextView
                    android:id="@+id/tv_glance_txns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢ 0 transactions today"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- Item 2: Highest Spend -->
            <LinearLayout
                android:id="@+id/container_glance_highest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                <TextView
                    android:id="@+id/tv_glance_highest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Highest: â‚¹0 (None)"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- Item 3: Remaining -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_glance_remaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Remaining: â‚¹0"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 3. Behavioral Nudge (X-Factor) -->
    <TextView
        android:id="@+id/tv_nudge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Great control so far ðŸ‘"
        android:textColor="@color/text_secondary"
        android:textSize="13sp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
