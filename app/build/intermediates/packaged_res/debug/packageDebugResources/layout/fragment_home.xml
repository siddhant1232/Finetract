<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_page"
    android:padding="24dp">

    <!-- Trust/Secure Indicator -->
    <LinearLayout
        android:id="@+id/container_secure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”’"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/secure_label"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Main Spending Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/surface_card"
        app:layout_constraintTop_toBottomOf="@id/container_secure">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="32dp">

            <TextView
                android:id="@+id/tv_label_spend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_daily_spend"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Today's Spend Amount -->
            <TextView
                android:id="@+id/tv_spend_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="â‚¹0"
                android:textColor="@color/text_primary"
                android:textSize="48sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_label_spend" />

            <!-- Divider / Limit Info -->
            <TextView
                android:id="@+id/tv_limit_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:text="/ â‚¹500"
                android:textColor="@color/text_secondary"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_spend_amount"
                app:layout_constraintStart_toEndOf="@id/tv_spend_amount" />
            
            <!-- Progress Bar -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:trackCornerRadius="8dp"
                app:trackThickness="12dp"
                app:indicatorColor="@color/success_green"
                app:trackColor="#E0E0E0"
                app:layout_constraintTop_toBottomOf="@id/tv_spend_amount" />

            <!-- Positive Reinforcement / Status -->
            <TextView
                android:id="@+id/tv_status_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/positive_reinforcement"
                android:textColor="@color/primary"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress_limit" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
