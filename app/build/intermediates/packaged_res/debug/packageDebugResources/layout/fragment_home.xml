<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_page"
    android:padding="24dp">

    <!-- 1. Smart Greeting Header -->
    <TextView
        android:id="@+id/tv_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Good Morning!"
        android:textColor="@color/text_primary"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Jan 12, Sunday"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_greeting"/>

    <!-- Trust Badge (Moved to Top Right) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_pill_accent"
        android:backgroundTint="#E1F5FE"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_greeting"
        app:layout_constraintBottom_toBottomOf="@id/tv_date">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”’ PRIVATE"
            android:textColor="@color/primary_dark"
            android:textSize="10sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"/>
    </LinearLayout>

    <!-- 2. Main Circular Progress -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_date">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:trackThickness="18dp"
            app:indicatorSize="200dp"
            app:trackColor="#F5F5F5"
            app:indicatorColor="#F5F5F5"
            android:progress="100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:trackThickness="18dp"
            app:indicatorSize="200dp"
            app:trackColor="@android:color/transparent"
            app:indicatorColor="@color/success_green"
            app:trackCornerRadius="9dp"
            android:progress="50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/progress_background"
            app:layout_constraintEnd_toEndOf="@id/progress_background"
            app:layout_constraintStart_toStartOf="@id/progress_background"
            app:layout_constraintTop_toTopOf="@id/progress_background">

            <TextView
                android:id="@+id/tv_spend_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="â‚¹420"
                android:textColor="@color/text_primary"
                android:textSize="36sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/tv_limit_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                tools:text="of â‚¹2,000"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 3. Daily Insight -->
    <TextView
        android:id="@+id/tv_daily_insight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="Youâ€™re doing great today!"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_progress"/>

    <!-- 4. Dashboard Stats Grid -->
    <LinearLayout
        android:id="@+id/container_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:weightSum="3"
        android:baselineAligned="false"
        app:layout_constraintTop_toBottomOf="@id/tv_daily_insight">

        <!-- Stat 1: Count -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ§¾"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tv_stat_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="4"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Txns"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Stat 2: Highest -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”¥"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tv_stat_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="â‚¹120"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Highest"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Stat 3: Left -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’°"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tv_stat_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="â‚¹500"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/tv_stat_left_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Left"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 5. Behavioral Nudge (Bottom Pill) -->
    <TextView
        android:id="@+id/tv_nudge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="âœ¨ Great control so far!"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="@drawable/bg_pill_accent"
        android:backgroundTint="#F1F8E9"
        android:textColor="@color/success_green"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
