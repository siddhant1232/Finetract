<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFDE7"> <!-- Creamy paper color -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MONTHLY REPORT CARD"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:textColor="#5D4037"
            android:fontFamily="serif"/>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="12dp"
            android:background="#D7CCC8"/>

        <!-- Grade Circle -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            
            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_pill_accent"
                android:backgroundTint="#FFCCBC"/> <!-- Light Red/Orange -->
                
            <TextView
                android:id="@+id/tv_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="B"
                android:textSize="64sp"
                android:textStyle="bold"
                android:textColor="#BF360C"
                android:fontFamily="serif"/>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="OVERALL GRADE"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#5D4037"
            android:layout_marginTop="8dp"/>

        <!-- Discipline -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Discipline Attendance:"
                android:textColor="#5D4037"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="24 / 28 Days"
                android:textColor="#3E2723"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="#D7CCC8"/>

        <!-- Subjects -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBJECT PERFORMANCE"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#5D4037"/>

        <LinearLayout
            android:id="@+id/container_subjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#D7CCC8"/>
            
        <!-- Remark -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEACHER'S REMARK"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#5D4037"/>
            
        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Good work, but watch out for weekend spending."
            android:layout_marginTop="4dp"
            android:textColor="#3E2723"
            android:fontFamily="serif"
            android:importantForAccessibility="no"
            android:textSize="15sp"
            android:textStyle="italic"/>
            
         <!-- Tip -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFECB3"
            android:padding="12dp"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¡ IMPROVEMENT TIP"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#F57F17"/>
                
            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Monitoring food expenses may improve control."
                android:layout_marginTop="4dp"
                android:textColor="#E65100"/>
        </LinearLayout>

        <!-- Button -->
        <Button
            android:id="@+id/btn_dismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Signed by Student"
            android:textColor="#FFFFFF"
            android:backgroundTint="#5D4037"
            android:fontFamily="serif"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
